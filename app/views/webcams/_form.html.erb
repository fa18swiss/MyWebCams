<%= form_for(@webcam) do |f| %>
  <% if @webcam.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@webcam.errors.count, "error") %> prohibited this webcam from being saved:</h2>

      <ul>
      <% @webcam.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <div class="row">
      <div class="col-md-5">
          <div class="form-group">
            <%= f.label :name, :class => "control-label" %>*
            <%= f.text_field :name, :class => "form-control" %>
          </div>
        <div class="form-group">
            <%= f.label :url, :class => "control-label" %>*
            <%= f.text_field :url, :class => "form-control" %>
          </div>
        <div class="form-group">
            <%= f.label :latitude, :class => "control-label" %>*
            <%= f.text_field :latitude, :class => "form-control", :disabled => false, :placeholder => "Click on the map to get the latitude", :id => "latitudeField" %>
          </div>
        <div class="form-group">
            <%= f.label :longitude, :class => "control-label" %>*
            <%= f.text_field :longitude, :class => "form-control", :disabled => false, :placeholder => "Click on the map to get the longitude", :id => "longitudeField" %>
          </div>
        <div class="form-group">
            <%= f.label :orientation, :class => "control-label" %>
            <%= f.text_field :orientation, :class => "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit :class => "btn btn-primary btn-lg btn-block" %>
          </div>
       </div>
      <div class="col-md-5">
          <div  class="embed-responsive embed-responsive-16by9">
            <div id="map" class="embed-responsive-item"> </div>
          </div>
      </div>
    </div>
<% end %>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script data-turbolinks-track="true" type="text/javascript">
    $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: {id: 'map'} }, function(){
            if(navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(displayOnMap);
            }
            else {
                var centerpoint = new google.maps.LatLng(46.997654, 6.938644); //HE-Arc
                handler.map.centerOn(centerpoint);
            }
        });

        function displayOnMap(position){
            var marker = new google.maps.Marker({
                lat: position.coords.latitude,
                lng: position.coords.longitude
            });
            handler.map.centerOn(marker);
        };

        var currentChoosedPosition;
        google.maps.event.addListener(handler.getMap(), 'click', function( event ){
            $("#latitudeField").val(event.latLng.lat());
            $("#longitudeField").val(event.latLng.lng());
            currentChoosedPosition = new google.maps.LatLng(event.latLng.lat(), event.latLng.lng());
            handler.addMarker(currentChoosedPosition);
        });
    });
</script>
